      function loop(data) {
        var items = "";

        data.map((e) => {
          items += `<tr><td class="description">${e.item.productName}</td>
                                <td class="quantity">${e.qty}</td>
                                <td></td>
                                <td class="amount">${e.price}</td>
                              </tr>`;
        });

        return items;
