  <style>
    .detach:hover {
      cursor: pointer;
    }
    #customerTag:hover {
      cursor: pointer;
    }
    .autocom-boxCust {
      position: absolute;
      z-index: 90;
      background: #fff;
      width: 100%;
      margin-top: 34px;
      box-shadow: 0 0.1rem 0.2rem rgb(0 0 0 / 5%);
      border: 1px solid rgba(0, 0, 0, 0.15);
      border-radius: 0.2rem;
      padding: 0px;
      max-height: 280px;
      overflow-y: auto;
      opacity: 0;
      pointer-events: none;
    }
    .autocom-boxCust li {
      list-style: none;
      padding: 8px 12px;
      width: 100%;
      cursor: default;
      border-radius: 3px;
      /* display: none; */
    }
    .searchCustomerWrap.active .autocom-boxCust {
      opacity: 1;
      pointer-events: auto;
    }
    .autocom-boxCust li:hover {
      background-color: #efefef;
      cursor: pointer;
    }
    .left {
      float: left;
      margin-right: 10px;
    }
    .right {
      margin: 0 0 0 5px;
    }
    /* --------------- */
    .autocom-box {
      position: absolute;
      z-index: 90;
      background: #fff;
      width: 100%;
      margin-top: 54px;
      box-shadow: 0 0.1rem 0.2rem rgb(0 0 0 / 5%);
      border: 1px solid rgba(0, 0, 0, 0.15);
      border-radius: 0.2rem;
      padding: 0px;
      max-height: 280px;
      overflow-y: auto;
      opacity: 0;
      pointer-events: none;
    }
    .autocom-box li {
      list-style: none;
      padding: 8px 12px;
      width: 100%;
      cursor: default;
      border-radius: 3px;
      border-bottom: 1px solid #ced4da;
      /* display: none; */
    }
    .searchItemWrap.active .autocom-box {
      opacity: 1;
      pointer-events: auto;
    }
    .autocom-box li:hover {
      background-color: #efefef;
      cursor: pointer;
    }
    /* width: 100%;
      height: auto;
      padding: 1%;
      float: left;
      border-bottom: 1px solid #ced4da; */
