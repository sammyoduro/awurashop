                      var $this = $(this),
                        el = buttons.not(this),
                        isCash = $this.is("#cash"),
                        isCheque = $this.is("#cheque") ,
                        isMomo = $this.is("#momo");
                        if(isCheque){$("#chequeBox").show();
                        paymentType="Cheque"}else{$("#chequeBox").hide()}
                        if(isCash){paymentType="Cash"}
                        if(isMomo){paymentType="Momo"}
                        $this.removeClass("disabled");
                      $this.addClass("btn-primary");
